  <div class="row ms-2">
    <div class="col-3 p-2">
      <div class="apollo-fg-black-20 apollo-fs-14">Street</div>
      <span><%= project.street %></span>
    </div>

    <div class="col-3 p-2">
      <div class="apollo-fg-black-20 apollo-fs-14">State</div>
      <span><%= project.state %></span>
    </div>
  </div>
  
  <div class="row  ms-2">
    <div class="col-3 p-2">
      <div class="apollo-fg-black-20 apollo-fs-14">City</div>
      <span><%= project.city %></span>
    </div>

    <div class="col-3 p-2">
      <div class="apollo-fg-black-20 apollo-fs-14">Zip</div>
      <span><%= project.zip %></span>


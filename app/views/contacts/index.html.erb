<%= spacer(20) %>

<%= silica_container do %>
  <%= render '/card', title: 'Contacts' do |p| %>
    <% if defined?(:p) && p %>
      <% p.content_for :heading_right do %>
        <%= render '/contacts/index/bar', contacts_bar_state: @contacts_bar_state %>
      <% end %>
    <% end %>
    <%= spacer(6) %>
    <%= render '/contacts/index/table', contacts_table_state: @contacts_table_state %>
  <% end %>
<% end %>

<div id="contacts-index-bar" class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups" data-controller="contacts">
  <%= form_with(url: '/contact_searches', method: :post, id: 'contact_searches_form') do |form| %>
  <% end %>
  <div class="btn-group collapse show" data-contacts-target="pagination" role="group" aria-label="Third group">

    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
      <button type="button" class="btn btn-outline-brandprimary">&lt; PREV</button>
      <button type="button" class="btn btn-outline-brandprimary">NEXT &gt;</button>
    </div>

  </div>

  <div class="btn-group ms-3" role="group" aria-label="First group">
    <button type="button" data-contacts-target="plus" data-action="contacts#plus" class="btn btn-outline-brandprimary collapse show"><i class="fas fa-plus"></i></button>
  </div>

  <%= form_with(url: contacts_url, method: :post, id: 'contacts-entry-form') do |form| %>
    <div class="collapse btn-group align-items-center justify-content-center ms-3" data-contacts-target="entry" role="group" aria-label="First group">
      <input name="contact[first_name]" type="text" class="form-control me-1" placeholder="First name" aria-label="Input group example" aria-describedby="btnGroupAddon" style="width: 150px">
      <input name="contact[last_name]" type="text" class="form-control me-1" placeholder="Last name" aria-label="Input group example" aria-describedby="btnGroupAddon" style="width: 150px">
      <input name="contact[phone]" type="text" class="form-control me-1" placeholder="Phone" aria-label="Input group example" aria-describedby="btnGroupAddon" style="width: 150px">
      <input name="contact[email]" type="text" class="form-control me-3" placeholder="Email" aria-label="Input group example" aria-describedby="btnGroupAddon" style="width: 150px">
      <div class="form-check form-switch">
        <%= form.check_box 'contact[ut]', class: 'form-check-input', checked: true %>
        <%= label_tag('contact[ut]', "UT") %>
      </div>
      &nbsp;
      <div class="form-check form-switch">
        <%= form.check_box 'contact[nc]', class: 'form-check-input', checked: false %>
        <%= label_tag('contact[nc]', "NC") %>
      </div>
      <button type="button" class="btn btn-outline-brandprimary ms-4" data-contacts-target="save" data-action="contacts#save">SAVE</button>
    </div>
  <% end %>

  <div class="btn-group" role="group" aria-label="Third group">
    <div class="input-group ms-3 me-3">
      <input name="contact_search[query]" form="contact_searches_form" type="text" class="form-control collapse show" data-contacts-target="search" placeholder="Search for..." aria-label="Input group example" aria-describedby="btnGroupAddon">
      <div class="input-group-text text-brandprimary collapse show" data-action="click->contacts#search" data-contacts-target="searchBtn" style="background: transparent" role="button" id="btnGroupAddon"><i class="fas fa-search"></i></div>
    </div>
  </div>

  <div class="btn-group collapse show" role="group" data-contacts-target="sort">
    <div class="dropdown">
      <button class="btn btn-outline-brandprimary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Sort
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="#"><i class="fas fa-check invisible"></i> First name</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-check invisible"></i> Last name</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-check invisible"></i> Phone</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-check invisible"></i> Work phone</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-check invisible"></i> Email</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-check invisible"></i> States</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-check invisible"></i> Added Date</a></li>

        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-check invisible"></i> Descending</a></li>
      </ul>
    </div>
  </div>
</div>

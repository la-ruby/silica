    <td>
      Marketplace::WeakerStyle<br>
      <span class="fst-italic">The bottom-disclaimer uses this style</span>
    </td>
    <td>
      <%= configuration_size_tag(:marketplace_weaker_style_size, Setting.marketplace_weaker_style_size, form_id) %>
    </td>
    <td>    
      <%= configuration_weight_tag(:marketplace_weaker_style_weight, Setting.marketplace_weaker_style_weight, form_id) %>
    </td>
    <td>    
      <%= configuration_face_tag(:marketplace_weaker_style_face, Setting.marketplace_weaker_style_face, form_id) %>

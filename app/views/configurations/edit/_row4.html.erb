<tr>
  <% form_id = random_id %>
  <%= form_with(url: configuration_path, method: :patch, id: form_id) do |form| %>
    <td class="align-middle">
      Marketplace::WeakerStyle
      <%= question_tooltip('The bottom-disclaimer uses this style') %>
    </td>
    <td class="align-middle">
      <%= configuration_size_tag(:marketplace_weaker_style_size, Setting.marketplace_weaker_style_size, form_id) %>
    </td>
    <td class="align-middle">    
      <%= configuration_weight_tag(:marketplace_weaker_style_weight, Setting.marketplace_weaker_style_weight, form_id) %>
    </td>
    <td class="align-middle">    
      <%= configuration_face_tag(:marketplace_weaker_style_face, Setting.marketplace_weaker_style_face, form_id) %>
    </td>
    <td class="align-middle">    
      <%= configuration_color_tag(:marketplace_weaker_style_color, 'Color', Setting.marketplace_weaker_style_color, form_id)  %>
    </td>
  <% end %>
</tr>

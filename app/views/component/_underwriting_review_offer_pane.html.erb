<% instance = generate_instance_id
   form_id = "form-of-#{instance}"
   project = Project.find(project_id)
%>


<div id="apollo-underwriting-review-offer-pane" class="container pt-3 pb-3 <%= normal_text %>">

  <%= render '/component/underwriting_review_offer_pane/actions', project_id: project.id %>

  <div class="row">
    <div class="col-12 col-lg-7">
      <%= render '/component/underwriting_review_offer_pane/repc_details', project_id: project.id %>
      <br>
      <br>
      <%= render '/projects/offer/shared/sales_notes_for_underwriting', project_id: project.id, static_mode: true %>
      <br>
      <br>

      <%= render '/projects/underwriting_review_offer/underwriting_notes_for_sales', project_id: project.id %>
      <br>
      <br>
      <div id="apollo-addendums-area">
        <%= render '/shared/addendums_v2', project_id: project.id, editable: true %>
      </div>
      <div id="apollo-addendums-area-bottom"></div>

    </div>

    <div class="col col-lg-5">
      <%= render '/component/underwriting_review_offer_pane/dates', project_id: project.id %>
      <br>
      <br>
      <%= render '/component/underwriting_review_offer_pane/repc_feedback', project_id: project.id %>
      <br>
      <br>
      <%= render '/lenders', project_id: project.id %>
    </div>
  </div>
</div>


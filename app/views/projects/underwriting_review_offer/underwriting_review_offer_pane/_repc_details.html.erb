<% project = Project.find(project_id) %>

<%= render '/card', title: 'REPC Details' do |p| %>

  <% if defined?(:p) && p %>
    <% p.content_for :heading_right do %>
      <% if project.repc.signed_by_company_at && project.repc.sent_homeowner_at  %>
        <div class="me-3">
          <a href="<%= "#{APOLLO_PORTAL_FULL_DOMAIN}/offer/#{project.repc.mop_token}" %>" target="_blank" class="btn btn-sm btn-outline-brandprimary silica-rounded-0.5-i" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="Link to Sellers My Offer Portal for testing" data-controller="apollo-tooltip">
	    View Offer Portal
          </a>
          <% if project.dual? %>
          <a href="<%= "#{APOLLO_PORTAL_FULL_DOMAIN}/offer/#{project.repc.second_seller_mop_token}" %>" target="_blank" class="btn btn-sm btn-outline-brandprimary silica-rounded-0.5-i" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="Link to Second Sellers My Offer Portal for testing" data-controller="apollo-tooltip">
	    View Offer Portal (2)
          </a>
	  <% end %>
        </div>
      <% else %>
        <div class="me-3">
          <a target="_blank" class="btn btn-sm btn-link pe-none silica-rounded-0.5-i" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="Link to Sellers My Offer Portal (available after REPC signed by <%= COMPANY %> and Offer Sent To Seller)" data-controller="apollo-tooltip">
            View Offer Portal
          </a>
          <% if project.dual? %>
          <a target="_blank" class="btn btn-sm btn-link pe-none silica-rounded-0.5-i" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="Link to Second Sellers My Offer Portal (available after REPC signed by <%= COMPANY %> and Offer Sent To Seller)" data-controller="apollo-tooltip">
            View Offer Portal (2)
          </a>
	  <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>


  <div class="row">
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Purchase Price</div>
      <span><%= (project.repc.purchase_price.presence || '-') rescue '-' %></span>
    </div>
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Agreement Date</div>
      <div><%= project.repc.agreement_date.presence || '-'  %></div>
    </div>
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Closing Costs Paid By</div>
      <div><%= project.repc.closing_costs_paid_by.presence || '-'  %></div>
    </div>
  </div>

  <div class="row">
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Earnest Money</div>
      <span><%= project.repc.earnest_money.presence || '-' %></span>
    </div>
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Settlement Date</div>

        <div><%= project.repc.settlement_date.presence || '-'  %></div>
    </div>
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Real Estate Professional</div>
      <%= project.repc.real_estate_professional.presence || '-' %>
    </div>
  </div>

  <hr>
  <div class="<%= BOOTSTRAP_UPGRADE ? "btn pe-none #{current_area.style(:strong).classes}" : '' %>">REPC Term Details</div>

  <div class="row">
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Down Payment</div>
      <span><%= project.repc.down_payment.presence || '-' %></span>
    </div>
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Interest Rate</div>
      <span><%= project.repc.interest_rate.presence || '-' %></span>
    </div>
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Est. Remaining Mortg.</div>
      <span><%= project.repc.estimated_remaining_mortgage.presence || '-' %></span>
    </div>
  </div>

  <div class="row">
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Term Length</div>
      <span><%= project.repc.term_length.presence || '-' %></span>
    </div>
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Monthly Payment</div>
      <span><%= project.repc.monthly_payment.presence || '-' %></span>
    </div>
    <div class="col mx-3 py-3">
      <div class="apollo-fg-black-20 apollo-fs-14">Balloon Payment</div>
      <span><%= project.repc.balloon_payment.presence || '-' %></span>
    </div>
  </div>
  

<% end %>


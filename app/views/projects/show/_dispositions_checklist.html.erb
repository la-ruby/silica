<% form_id = 'form-property-disposition-checklist' %>

<%= render '/projects/show/shared/summary', local_assigns %>

<%= render '/projects/show/shared/tabs', **local_assigns, active: 'Dispositions' %>

<%= spacer(4) %>

<%= render '/projects/show/shared/dispositions_inner_tabs', **local_assigns, active: 'Checklist' %>

<div id="property-disposition-checklist" data-controller="property-disposition-checklist" class="<%= current_area.style(:basic).classes %>">
  <%= form_with(url: "/property_disposition_checklists/#{project.property_disposition_checklist.id}", method: :patch, class: 'd-inline-block main-form', data: { property_disposition_checklist_target: 'form' }, id: form_id) do |form| %>
  <% end %>

  <div class="container pt-3 pb-3">
    <%= render '/card', title: 'Property Dispositions Checklist' do |p| %>

      <% if defined?(:p) && p %>
        <% p.content_for :heading_right do %>
          <%= dashify(project.intake_form.what_type_of_property_is_this) %>
        <% end %>
      <% end %>

      <%= render '/projects/show/dispositions_checklist/segment_1', **local_assigns, form_id: form_id %>
      <% if project.intake_form.what_type_of_property_is_this != "Outside buyer" %>
        <%= render '/projects/show/dispositions_checklist/segment_2', **local_assigns, form_id: form_id %>
        <%= render '/projects/show/dispositions_checklist/segment_3', **local_assigns, form_id: form_id %>
        <%= render '/projects/show/dispositions_checklist/segment_4', **local_assigns, form_id: form_id %>
        <%= render '/projects/show/dispositions_checklist/segment_5', **local_assigns, form_id: form_id %>
      <% end %>
    <% end %>
  </div><!-- /container -->
</div>

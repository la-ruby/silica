  <div class="container pt-3 pb-3 <%= current_area.style(:basic).classes %>">
    <div class="row">
      <div class="col">
        <div class="my-1 py-1">
          <div style="max-width: 700px">
            <%= javascript_include_tag 'silica_react_entry' %>

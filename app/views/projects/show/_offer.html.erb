<% if UxPolicy.new(current_user, nil).overview? %>

  <%= render '/projects/show/shared/summary', project: @project %>

  <%= render '/projects/show/shared/tabs', project: @project, active: 'Offer' %>

  <%= render '/projects/show/offer/quad', project_id: @project.id %>

  <div class="container pt-3 pb-3">
    <div class="row">
      <div class="col-12 col-lg-7">
        <%= render '/projects/show/offer/repc_details', project_id: @project.id %>
        <br>
        <br>
        <%= render '/projects/show/offer/shared/sales_notes_for_underwriting', project_id: @project.id, static_mode: false %>
        <br>
        <br>
  
        <%= render '/projects/show/offer/underwriting_notes_for_sales', project_id: @project.id %>
        <br>
        <br>
        <%= render '/projects/shared/addendums', project_id: @project.id, editable: false %>
  
      </div>
  
      <div class="col col-lg-5">
        <%= render '/projects/show/offer/dates', project_id: @project.id %>
        <br>
        <br>
        <%= render '/projects/show/offer/repc_feedback', project_id: @project.id %>
        <br>
        <br>
      </div>
  
    </div>
  </div>

<% end %>

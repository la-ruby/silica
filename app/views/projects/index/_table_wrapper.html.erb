<div id="projects-index-table-wrapper" style="min-height: 60vh">

  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <table class="table mt-4">
          <%= render '/projects/index/thead' %>  
          <tbody style="border-top-color: #dee2e6; border-top-width: 1px">
          <% projects.each do |project| %>
            <%= render('/projects/index/row', project: project) %>
          <% end %>
          </tbody>
        </table>
        <%= paginate projects, page: page, query: query, statefilter: statefilter, cityfilter: cityfilter, sourcefilter: sourcefilter, statusfilter: statusfilter, req_date: req_date, offer_sent: offer_sent, sort_by: sort_by, sort_direction: sort_direction %>
      </div>
    </div>
  </div>

</div>
